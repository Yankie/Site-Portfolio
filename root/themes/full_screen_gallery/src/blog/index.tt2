<div id="right">
[% IF articles.count > 0 %]
<div id="article">
	[% WHILE ( article = articles.next) %]
		[% INCLUDE blog/article.tt2 %]
	[% END %]
</div>
[% ELSE %]
	[% page_message %]
[% END %]

[% IF c.can('check_user_roles') && c.check_user_roles( 'admin' ) %]
<hr/>
<p>
	<a href="[% c.uri_for('/blog/add') | html %]">[% c.loc("ui.blog.link.add") %]</a>
</p>
[% END %]
</div>
[% META title = 'Image Galleries' %]
<div id="right">
<p>Feel free to browse my work below:</p>

[% IF galleries.count > 0 %]
<div id="modules-holder">
	[% WHILE (gallery = galleries.next) %]
		[% INCLUDE gallery/gallery_fragment.tt2 %]
	[% END %]
</div>
[% ELSE %]
<p>No galleries yet!</p>
[% END %]
</div>
[% IF c.can('check_user_roles') && c.check_user_roles( 'admin' ) %]
<hr/>
<p>
	<a href="[% c.uri_for('/gallery/add') | html %]">Add a new gallery...</a>
</p>
[% END %]

